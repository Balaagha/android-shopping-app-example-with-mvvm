<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/blue_bordered_pressed" />
			<corners android:radius="28dp"/>
			<stroke android:width="2px" android:color="@color/colorDarkInput" />
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape android:shape="rectangle">
			<solid android:color="@color/background_transparent" />
			<corners android:radius="28dp"/>
			<stroke android:width="2px" android:color="@color/gray" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/background_transparent" />
			<corners android:radius="28dp"/>
			<stroke android:width="2px" android:color="@color/colorPrimaryDark" />
		</shape>
	</item>
</selector>