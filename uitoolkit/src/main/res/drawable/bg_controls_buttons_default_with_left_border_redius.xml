<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/brand_primary_pressed" />
			<corners android:topLeftRadius="6dp" android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" android:topRightRadius="0dp" />
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape android:shape="rectangle">
			<solid android:color="@color/button_default_de_active" />
			<corners android:topLeftRadius="6dp" android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" android:topRightRadius="0dp" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/blue_primary" />
			<corners android:topLeftRadius="6dp" android:bottomLeftRadius="6dp" android:bottomRightRadius="0dp" android:topRightRadius="0dp" />
		</shape>
	</item>
</selector>