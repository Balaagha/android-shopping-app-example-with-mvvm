<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<gradient
				android:angle="0"
				android:endColor="#F5B074"
				android:startColor="#FDBB84"
				android:type="linear"/>
			<corners android:radius="6dp" />
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape android:shape="rectangle">
			<solid android:color="@color/button_default_de_active" />
			<corners android:radius="6dp" />
		</shape>
	</item>
	<item>
		<shape android:shape="rectangle">
			<gradient
				android:angle="0"
				android:endColor="@color/expense_main"
				android:startColor="@color/expense_secondary"
				android:type="linear"/>
			<corners android:radius="6dp" />
		</shape>
	</item>
</selector>