<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".ui.entryflow.view.onboarding.screens.OnBoardingFirstFragment">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_onboarding_first"
        app:layout_constraintBottom_toTopOf="@+id/contentContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.example.uitoolkit.custom.CustomMaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text_appearance="@style/SemiBoldBarlowBlack"
            app:text="High quality products just for you!"
            app:text_color="@color/colorPrimaryDark"
            android:textSize="36sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>